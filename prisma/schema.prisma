generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  password String

  reviews Review[]
}

model Author {
  id       String @id @default(cuid())
  slug     String @unique
  name     String
  remoteId String

  models Model[]
}

model Model {
  id               String   @id @default(cuid())
  slug             String
  name             String
  lastModifiedDate DateTime
  numParameters    String?
  arch             Arch
  license          String?
  remoteId         String
  ggufId           String
  authorId         String

  files   File[]
  reviews Review[]
  author  Author   @relation(fields: [authorId], references: [id])

  @@unique([authorId, slug])
}

model File {
  id           String @id @default(cuid())
  name         String @unique
  quantization String
  format       String

  modelId String
  model   Model  @relation(fields: [modelId], references: [id])
}

model Review {
  id          String  @id @default(cuid())
  stars       Int
  text        String
  externalUrl String?
  userId      String
  modelId     String

  model Model @relation(fields: [modelId], references: [id])
  user  User  @relation(fields: [userId], references: [id])
}

enum Arch {
  llama
  starcoder
  mistral
  falcon
  tinyllama
  aquila
  other
}
